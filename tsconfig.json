{
    "compilerOptions": {
        "charset": "utf8",
        "noImplicitAny": true, 
        "noImplicitThis": true,
        "alwaysStrict": true,
        "strictBindCallApply": true,
        //"esModuleInterop": true,
        //"strictNullChecks": true,
        "strictFunctionTypes": true,
        //"strictPropertyInitialization": true,
        "module": "commonjs",
        "target": "es2017",
        "declaration": true,
        "noEmitOnError": true,
        "sourceMap": true,
        "outDir": "node"
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}